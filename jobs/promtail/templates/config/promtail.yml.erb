server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /var/vcap/store/promtail/positions.yaml

client:
  url: <%= p("promtail.loki") %>

scrape_configs:
- job_name: system
  entry_parser: raw
  static_configs:
  - targets:
      - localhost
    labels:
      source: var
      job: system
      az: <%= spec.az %>
      instance_name: <%= spec.name %>
      instancE_id: <%= spec.id %>
      address: <%= spec.address %>
      ip: <%= spec.ip %>
      __path__: /var/log/*.log
- job_name: bosh
  entry_parser: raw
  static_configs:
  - targets:
      - localhost
    labels:
      source: bosh
      job: <%= name %>
      az: <%= spec.az %>
      instance_name: <%= spec.name %>
      instancE_id: <%= spec.id %>
      address: <%= spec.address %>
      ip: <%= spec.ip %>
      __path__: /var/vcap/sys/logs/*/*.log

